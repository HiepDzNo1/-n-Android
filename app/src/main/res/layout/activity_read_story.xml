<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--    nơi đọc truyện-->

    <!-- Số chương và tên chương -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewChapterview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter " />

        <TextView
            android:id="@+id/textViewChapterNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter 1 " />

        <TextView
            android:id="@+id/textViewChapterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter Title" />

    </LinearLayout>
    <!-- Nội dung chương truyện -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textViewChapterContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Chapter Content" />

    </ScrollView>

    <!-- Nút xem trước và xem sau -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonPreviousChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem trước" />

        <Button
            android:id="@+id/buttonNextChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem sau" />

    </LinearLayout>

    <!-- Phần comment và nút submit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:minWidth="150dp"
            android:hint="Leave a comment..." />

        <Button
            android:id="@+id/buttonSubmitComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />

    </LinearLayout>



</LinearLayout>